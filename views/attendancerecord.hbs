<div class="d-md-flex h-md-100 align-items-center">

    <!-- First Half -->
    <div class="col-md-6 p-0 bg-indigo h-md-100">
        <div class="text-white d-md-flex align-items-center h-100 p-5 text-center justify-content-center">
            <div class="logoarea pt-5 pb-5">
                                <table class="table">
  <thead>
    <tr>
      <th scope="col">AttenID</th>
      <th scope="col">EmployeeID</th>
      <th scope="col">AttenType</th>
      <th scope="col">Date/Time</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}

    <tr>
      <th scope="row">{{this.attendanceID}}</th>
      <td>{{this.employeeID}}</td>
      <td>{{this.attendance_type}}</td>
      <td>{{this.datein}}</td>
    {{/each}}
  </tbody>
</table>
            </div>
        </div>
    </div>

    <!-- Second Half -->
    <div class="col-md-6 p-0 bg-white h-md-100 loginarea">
        <div class="d-md-flex align-items-center h-md-100 p-5 justify-content-center">
            <div class="text-center">
                        <h1 class="text-dark mx-auto my-0 text-uppercase">Attendance Record</h1>
                        {{#if alert}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  {{alert}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

  <form action="/attendance/timein" method="POST">
<div class="form-floating-mb-3">
  <input
    type="text"
    class="form-control"
    value="{{this.emp_id}}"
    placeholder="Your employee ID"
    name="e_ID"
  >
  <label>Employee ID:</label>
</div>
<div class="col-12">
  <input class="btn btn-light" type="submit" value="Time In/Out">
</div>
</form> 
                    </div>
        </div>
    </div>
        
</div>           