<table class="table table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      
      <th scope="col">Transaction #</th>
      <th scope="col">Item ID</th>
      <th scope="col">Item Name</th>
      <th scope="col">Brand</th>
      <th scope="col">Item Category</th>
      <th scope="col">Supplier</th>
      <th scope="col">Cost</th>
      <th scope="col">Price</th>
      <th scope="col">Stock Added</th>
      <th scope="col">Encoded By</th>
      <th scope="col">Date & Time Added</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <th scope="row">{{this.reff_num}}</th>
      <td>{{this.item_id}}</td>
      <td>{{this.item_name}}</td>
      <td>{{this.brand_name}}</td>
      <td>{{this.category_name}}</td>
      <td>{{this.company_name}}</td>
      <td>{{this.price}}</td>
      <td>{{this.final_price}}</td>
      <td>{{this.new_stock_added}}</td>
      <td>{{this.emp_firstname}}</td>
      <td>{{this.datein}}</td>

    </tr>
  {{/each}}

  </tbody>
</table> 